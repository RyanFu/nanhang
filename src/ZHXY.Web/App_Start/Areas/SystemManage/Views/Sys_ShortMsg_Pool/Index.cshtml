@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
        //$.ajax({
        //    url: "/SystemManage/Sys_ShortMsg_Pool/SendMsg?MsgModelId=0b194644-aa33-4c97-b150-8623bca62f36&F_StuName=诸暨&F_Total=2000&F_Voucher=2018011813331901&F_Mobile=13344444444",
        //    dataType: "json",
        //    async: false,
        //    success: function (data) {
        //        console.log(data);
        //    }
        //});
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/SystemManage/Sys_ShortMsg_Pool/GetGridJson",
            height: $(window).height() - 173,
            colModel: [
              	{ label: '主键', name: 'F_Id', hidden: true },
				{ label: '接收人手机号', name: 'F_Mobile', width: 80, align: 'left' },
                { label: '短信内容', name: 'F_ShortMsg', width: 630, align: 'left' },
                {
                    label: '创建时间', name: 'F_CreatorTime', width: 120, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' }
                },
                {
                    label: '发送状态', name: 'F_Send_Statu', width: 60, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == "2") {
                            return '<span class=\"label label-success\">发送成功</span>';
                        } else if (cellvalue == "1") {
                            return '<span class=\"label label-default\">发送失败</span>';
                        }
                    }
                },
            ],
            pager: "#gridPager",
            sortname: 'F_DepartmentId asc,F_CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val(), F_DepartmentId: $("#F_DepartmentId").val(), F_CreatorTime_Start: $("#F_CreatorTime_Start").val(), F_CreatorTime_Stop: $("#F_CreatorTime_Stop").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增",
            url: "/SystemManage/Sys_ShortMsg_Pool/Form",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Form",
            title: "修改",
            url: "/SystemManage/Sys_ShortMsg_Pool/Form?keyValue=" + keyValue,
            width: "600px",
            height: "390px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_sout() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        //debugger;
        //if (keyValue == null) {
        //    top.layer.alert("请选中需要发送得短信！", { icon: "fa-times-circle", title: "系统提示", btn: ["确认"], btnclass: ["btn btn-primary"] });
        //    return;
        //}
        $.modalOpen({
            id: "Form",
            title: "发送",
            url: "/SystemManage/Sys_ShortMsg_Pool/Sout?keyValue=" + keyValue,
            width: "600px",
            height: "390px",
            btn:0
        });
    }

    function btn_delete() {
        var deleteid = $('#gridList').jqGridRowValue('F_Id');
        var keyValue = "";
        for (var i = 0; i < deleteid.length; i++) {
            keyValue += deleteid[i] + "|";
        }
        $.deleteForm({
            url: "/SystemManage/Sys_ShortMsg_Pool/DeleteForm",
            param: { keyValue: keyValue },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/SystemManage/Sys_ShortMsg_Pool/Details?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null,
        });
    }

    function btn_export() {
        var F_CreatorTime_Start = $("#F_CreatorTime_Start").val(); var F_CreatorTime_Stop = $("#F_CreatorTime_Stop").val();
        var keyValue = $("#txt_keyword").val();
        //if (keyValue != null)
        //    keyValue = "?keyword=" + keyValue;

        document.location = "/SystemManage/Sys_ShortMsg_Pool/export?keyword=" + keyValue + "&F_CreatorTime_Start=" + F_CreatorTime_Start + "&F_CreatorTime_Stop=" + F_CreatorTime_Stop + "";
    }

    function btn_import() {
        var title = 'Excel';
        var extensions = 'xls,xlsx';
        var mimeTypes = 'application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet';
        $.modalOpen({
            id: "Form",
            title: "导入",
            url: "/Home/Import?title=" + title + "&extensions=" + extensions + "&mimeTypes=" + mimeTypes + "&fileName=",
            width: "500px",
            height: "300px",
            callBack: function (iframeId) {
                var filePath = top.frames[iframeId].submitForm();
                importAcrion(filePath);
            }
        });
    }

    function importAcrion(filePath) {
        $.submitForm({
            url: "/SystemManage/Sys_ShortMsg_Pool/import",
            param: { filePath: filePath },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        @*<div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>*@
        <div class="btn-group"><a id="NF-export" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_export()"><i class="fa fa-arrow-down"></i>导出</a></div>
        <div class="btn-group"><a id="NF-import" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_import()"><i class="fa fa-arrow-up"></i>导入</a></div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                @*<li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>*@
                @*<li><a class="multi-edit" id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a></li>*@
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>
                <li class="split"></li>
                <li><a class="mutil-edit" id="NF-sout" authorize="yes" onclick="btn_sout()"><i class="fa fa-pencil-square-o"></i>修改发送</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <th class="formTitle">搜索：</th>
                <td>
                    <div class="input-group" style="margin-right:10px;margin-top:1px">
                        <input id="F_CreatorTime_Start" name="F_CreatorTime_Start" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" placeholder="创建时间开始" />
                    </div>
                </td>
                <td><div class="input-group" style="width:10px">--</div></td>
                <td>
                    <div class="input-group" style="margin-right:10px;margin-top:1px">
                        <input id="F_CreatorTime_Stop" name="F_CreatorTime_Stop" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" placeholder="创建时间结束" />
                    </div>
                </td>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="内容" style="width: 150px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>