@{
    ViewBag.Title = "AloneSout";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SystemManage/Sys_ShortMsg_Pool/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data)
                }
            });
        }
    });
    function initControl() {
        $("#F_ShortMsgModel").bindSelect({
            url: "/SystemManage/Sys_ShortMsgModel/GetSelectJson",
            id: "F_Id",
            text: "F_Title"
        });

        $("#F_ShortMsgModel").change(function () {
            $.ajax({
                url: "/SystemManage/Sys_ShortMsgModel/GetFormJson",
                data: { keyValue: $("#F_ShortMsgModel").val() },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#F_ShortMsg").html(data["F_Module"]);
                }
            });
        });
        $.addRequired('#form1')
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SystemManage/Sys_ShortMsg_Pool/SoutForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function (data) {
            }
        })
    }
    var Echo = {};
    function SoutOrg() {
        $.modalOpen({
            id: "AloneSoutOrg",
            title: "通讯录",
            //url: "/SystemManage/Sys_ShortMsg_Pool/AloneSoutOrg?Echoid=" + Echo["id"] + "&EchokeyValue=" + Echo["keyValue"] + "&Echouserid=" + Echo["userid"] + "",
            url: "/SystemManage/Sys_ShortMsg_Pool/AloneSoutOrg?EchokeyValue=" + Echo["keyValue"] + "&Echouserid=" + Echo["userid"] + "",
            width: "900px",
            height: "620px",
            callBack: function (iframeId) {
                var keyValue = top.frames[iframeId].submitForm();
                console.log(keyValue);
                Echo = keyValue;
                $("#F_Mobile").val(keyValue["keyValue"]);
                //if (keyValue["keyValue"] != "") {
                //    if ($("#F_Mobile").val() != "") {
                //        $("#F_Mobile").val($("#F_Mobile").val() + "," + keyValue["keyValue"]);
                //    } else
                //        $("#F_Mobile").val(keyValue["keyValue"]);

                //    if ($("#userid").val() != "") {
                //        $("#userid").val($("#userid").val() + "," + keyValue["userid"]);
                //    } else
                //        $("#userid").val(keyValue["userid"]);
                //}
            },
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px; width:50%;">
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">接收人手机号</th>
                    <td class="formValue">
                        <textarea id="F_Mobile" name="F_Mobile" class="form-control required" style="height: 60px;" placeholder="请输入手机号以‘,’号分割"></textarea>
                        <input type="text" id="userid" style="display:none;" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">通讯录</th>
                    <td class="formValue">
                        <input type="button" id="F_SoutOrg" class="layui-layer-btn0 btn btn-primary"  onclick="SoutOrg()" value="通讯录" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">选择模板</th>
                    <td class="formValue">
                        <select id="F_ShortMsgModel" name="F_ShortMsgModel" class="form-control">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">短信内容</th>
                    <td class="formValue">
                        <textarea id="F_ShortMsg" name="F_ShortMsg" class="form-control required" style="height: 80px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
        <input type="button" id="F_Sout" class="layui-layer-btn0 btn btn-primary" style="margin-left:11.5%;margin-top:5%;width:100px;height:30px;" onclick="submitForm()" value="短信发送" />
    </div>
</form>