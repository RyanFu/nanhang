@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    var tableId = $.request("tableId");
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/SystemManage/Sys_TableDef/GetFieldFormJson",
                data: { keyValue: keyValue, tableId: tableId },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data)
                }
            });
        }
    });

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SystemManage/Sys_TableDef/SubmitFieldForm?keyValue=" + keyValue + "&tableId=" + tableId,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">字段名称</th>
                    <td class="formValue">
                        <input id="F_FieldName" name="F_FieldName" type="text" class="form-control required" placeholder="请输入" />
                    </td>
                    </tr>
                <tr>
                    <th class="formTitle">字段标题</th>
                    <td class="formValue">
                        <input id="F_FieldTitle" name="F_FieldTitle" type="text" class="form-control required" placeholder="请输入" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">数据类型</th>
                    <td class="formValue">
                        <input id="F_DataType" name="F_DataType" type="text" class="form-control required" placeholder="请输入" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">数据长度</th>
                    <td class="formValue">
                        <input id="F_Length" name="F_Length" type="text" class="form-control required" placeholder="请输入" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">小数位数</th>
                    <td class="formValue">
                        <input id="F_DigitLen" name="F_DigitLen" type="text" class="form-control" placeholder="请输入" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">显示列宽</th>
                    <td class="formValue">
                        <input id="F_ColWidth" name="F_ColWidth" type="text" class="form-control" placeholder="请输入" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">序号</th>
                    <td class="formValue">
                        <input id="F_SortCode" name="F_SortCode" type="text" class="form-control required" placeholder="请输入序号" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">是否在列表中显示</th>
                    <td class="formValue">
                        <div class="ckbox">
                            <input id="F_IsListDispaly" name="F_IsListDispaly" type="checkbox" checked="checked"><label for="F_IsListDispaly">是</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">是否在excel中显示</th>
                    <td class="formValue">
                        <div class="ckbox">
                           <input id="F_IsExcelDispaly" name="F_IsExcelDispaly" type="checkbox" checked="checked"><label for="F_IsExcelDispaly">是</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">字典ID</th>
                    <td class="formValue">
                        <input id="F_Dic" name="F_Dic" type="text" class="form-control" placeholder="请输入序号" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">字典编号</th>
                    <td class="formValue">
                        <input id="F_Dic" name="F_Dic_Code" type="text" class="form-control" placeholder="请输入序号" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>