                    return '<tr><td>' + coruseNames + '</td><td>' + item.F_StudentCount + '</td><td><input name="F_ClassStudentCount" type="text" class="form-control" data-gid="' + item.F_TaskCourseGroupId + '" value="' + item.F_StudentCount + '" /></td></tr>'
                })
