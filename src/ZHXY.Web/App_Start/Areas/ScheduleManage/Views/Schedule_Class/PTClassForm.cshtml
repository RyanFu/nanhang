    function submitForm(callback) {
        if (!$('#form1').formValid()) {
            return false;
        }
        var datas = []
        //var objs=$("input[name='F_ClassStudentCount']");
        $("input[name='F_ClassStudentCount']").each(function () {
            datas.push({ F_TaskCourseGroupId: $(this).attr("data-gid"), F_ClassStudentCount: $(this).val() });
        });

        var postData = { F_TaskId: $("#F_TaskId").val(), data: datas };
        $.modalConfirm("注：此操作会将之前班级重置，确定执行吗？", function (r) {
            if (r) {

                $.ajax({
                    type: "POST",
                    url: "/ScheduleManage/Schedule_Class/SubmitForm",
                    data: JSON.stringify(postData),
                    contentType: "application/json",
                    dataType: "json",
                    success: function (data) {
                        if (data.state == "success") {
                            $.modalMsg(data.message, data.state);
                            $.modalClose();
                            callback($("#F_Year").val(), $("#F_SemesterId").val(), $("#F_DivisId").val(), $("#F_GradeId").val());
                        } else {
                            $.modalAlert(data.message, data.state);
                        }
                    }
                });
            }
        });
    }

