    function changeCourse() {

        $.ajax({
            url: "/ScheduleManage/Schedule_WCTaskReport/GetThreeCourseGridJson?F_TaskId="+$("#F_TaskId").val(),
            dataType: "json",
            async: false,
            success: function (data) {
                var selectOptions = $.map(data, function (item, i) {
                    var coruseNames = "";
                    var courseIds = item.F_CourseNames.split(",");
                    for (var i = 0; i < courseIds.length; i++) {
