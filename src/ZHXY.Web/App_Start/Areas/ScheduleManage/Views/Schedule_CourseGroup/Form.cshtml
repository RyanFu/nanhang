        $("#F_Type").bindSelect({
            dictionary: 'CourseGroupType',
            displayBlank: false
        });
        var selectOptions = [];
        $.map(top.clients.course, function (item, i) {
            if (item.F_CourseType == 4 && item.F_ParentId == 0)
                selectOptions.push('<option value=' + item.F_Id + '>' + item.F_Name + '</option>');
        })
        $('#F_Course1').append(selectOptions.join(''))
        $('#F_Course2').append(selectOptions.join(''))
        $('#F_Course3').append(selectOptions.join(''))
        $.addRequired('#form1')
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }

        $("#F_Courses").val($("#F_Course1").val() + "," + $("#F_Course2").val() + ","+$("#F_Course3").val());
        $.submitForm({
            url: "/ScheduleManage/Schedule_CourseGroup/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    function changeDivis() {
        $("#F_GradeId").find("option").remove();
        $("#F_GradeId").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Grade&parentId=" + $("#F_Divis_ID").val(),
        });
        changeClass();
    }

    function changeClass() {
        $("#F_ClassId").find("option").remove();
        $("#F_ClassId").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Class&parentId=" + $("#F_GradeId").val(),
        });
    }
</script>
