<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/ScheduleManage/Schedule_CourseGroup/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    var courseIds=data.F_Courses.split(",");
                    for (var i = 0;i< courseIds.length; i++) {
                        $("#F_Course"+(i+1)).val(courseIds[i]);
                    }
                }
            });
        }
    });
