    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/ScheduleManage/Schedule_MoveClass/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
			 	{ label: '主键', name: 'F_Id', hidden: true },
                {
                    label: '主键', name: 'F_Course', hidden: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return rowObject["F_CourseId"];
                    }
                },
                {
                    label: '年度', name: 'F_Year', width: 80, align: 'left',
                    formatter: function (cellvalue) {
                        return top.clients.dataItems["F_Year"][cellvalue] == undefined ? "" : top.clients.dataItems["F_Year"][cellvalue];
                    }
                },
			 	{
			 	    label: '学期', name: 'F_SemesterId', width: 80, align: 'left', formatter: function (cellvalue) {
			 	        return top.clients.semester[cellvalue] == undefined ? "" : top.clients.semester[cellvalue].fullname;
			 	    }
			 	},
                {
                    label: '学部', name: 'F_DivisId', width: 80, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        return top.clients.organize[cellvalue] == null ? "" : top.clients.organize[cellvalue].fullname;
                    }
                },
                {
                    label: '年级', name: 'F_GradeId', width: 80, align: 'left',
                    formatter: function (cellvalue) {
                        return top.clients.organize[cellvalue] == null ? "" : top.clients.organize[cellvalue].fullname;
                    }
                },
                { label: '班级名称', name: 'F_Name', width: 80, align: 'left' },
                {
                    label: '走班科目', name: 'F_CourseId', width: 80, align: 'left', formatter: function (cellvalue) {
                        return top.clients.course[cellvalue] == undefined ? "" : top.clients.course[cellvalue].F_Name;
                    }
                },
                { label: '任课教师', name: 'F_TeacherName', width: 80, align: 'left' },
                { label: '课时', name: 'F_CourseTime', width: 80, align: 'left' },
                {
                    label: '学生来源', name: 'F_ClassIds', width: 80, align: 'left', formatter: function (cellvalue) {
                        var classids = cellvalue.split(",");
                        var classnames = "";
                        for (var i = 0; i < classids.length; i++)
                            classnames += (top.clients.organize[classids[i]] == undefined ? "" : top.clients.organize[classids[i]].fullname) + ","
                        return classnames;
                    }
                },
                { label: '学生人数', name: 'F_StudentQTY', width: 80, align: 'left' },
                {
			 	    label: '创建时间', name: 'F_CreatorTime', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat:'Y-m-d H:i:s',newformat:'Y-m-d H:i:s' }
                }
            ],
            pager: "#gridPager",
            sortname: 'F_CreatorTime desc',
            viewrecords: true
        });

        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: {keyword: $("#txt_keyword").val(), F_Year: $("#F_Year").val(), F_Semester: $("#F_Semester").val(), F_Divis: $("#F_Divis_ID").val(), F_Grade: $("#F_Grade_ID").val(), F_Class: $("#F_Class_ID").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增",
            url: "/ScheduleManage/Schedule_MoveClass/Form",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        var F_CourseId = ($("#gridList").jqGridRowValue('F_Course'))[0];
        $.modalOpen({
            id: "Form",
            title: "修改",
            url: "/ScheduleManage/Schedule_MoveClass/Form?keyValue=" + keyValue + "&F_CourseId=" + F_CourseId,
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        var deleteid = $('#gridList').jqGridRowValue('F_Id');
        var keyValue = "";
        for (var i = 0; i < deleteid.length; i++) {
            keyValue += deleteid[i] + "|";
        }
        $.deleteForm({
            url: "/ScheduleManage/Schedule_MoveClass/DeleteForm",
            param: { keyValue: keyValue },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/ScheduleManage/Schedule_MoveClass/Details?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null,
        });
    }

    function btn_disabled() {
        var keyValue = $("#gridList").jqGridRowValue('F_Id');
        $.modalConfirm("注：您确定要【禁用】该项吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/ScheduleManage/Schedule_MoveClass/DisabledAccount",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }
    function btn_enabled() {
        var keyValue = $("#gridList").jqGridRowValue('F_Id');
        $.modalConfirm("注：您确定要【启用】该项吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/ScheduleManage/Schedule_MoveClass/EnabledAccount",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }

    function btn_export() {
        var keyValue = $("#txt_keyword").val();
        document.location = "/SchoolManage/School_StudentClass/export?keyword="
            + keyValue
            + "&F_DepartmentId=" + $("#F_Divis_ID").val()
            + "&F_Grade=" + $("#F_Grade_ID").val()
            + "&F_Class=" + $("#F_Class_ID").val()
            + "&F_Year=" + $("#F_Year").val();
    }

    function btn_import() {
        var title = 'Excel';
        var extensions = 'xls,xlsx';
        var mimeTypes = 'application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet';
        $.modalOpen({
            id: "Form",
            title: "导入",
            url: "/Home/Import?title=" + title + "&extensions=" + extensions + "&mimeTypes=" + mimeTypes + "",
            width: "500px",
            height: "300px",
            callBack: function (iframeId) {
                var filePath = top.frames[iframeId].submitForm();
                importAcrion(filePath);
            }
        });
    }

    function importAcrion(filePath) {
        $.submitForm({
            url: "/ScheduleManage/Schedule_MoveClass/import",
            param: { filePath: filePath },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

