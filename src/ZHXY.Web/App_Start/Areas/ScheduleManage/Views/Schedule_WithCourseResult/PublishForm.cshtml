@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();

    });
    function initControl() {
        $("#F_SemesterId").bindSelect({
            url: "/SchoolManage/School_Semester/GetGridSelect",
            id: "F_Id",
            text: "F_Name"
        });
        $("#F_Year").bindSelect({
            dictionary: 'F_Year',
            displayBlank: false
        });
        $("#F_DivisId").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Division",
        });

        $("#F_DivisId").change(function () {
            changeDivis();
        });

        $("#F_GradeId").change(function () {
            changeTask();
        });

        $.addRequired('#form1')
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }

        var vals = $('input:radio[name="F_CourseGroups"]:checked').val();
        //$('input:checkbox:checked').each(function (index, item) {
        //    vals += $(this).val() + ",";
        //});

        var postData = { F_StudentID:$("#F_StudentId").val(),F_TaskCourseGroupID:vals,F_TaskId: $("#F_TaskId").val(),keyValue: keyValue };
        $.loading(true, "正在处理...");
        $.submitForm({
            url: "/ScheduleManage/Schedule_WithCourseResult/SubmitForm",
            param: postData,
            success: function () {
                $.loading(false)
            }
        })
    }

    function changeDivis() {

        $("#F_GradeId").find("option").remove();
        $("#F_GradeId").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Grade&parentId=" + $("#F_DivisId").val(),
        });
        //changeClass();
    }

    function changeTask()
    {
        //$("#F_TaskId").find("option").remove();
        //$("#F_TaskId").bindSelect({
        //    url: "/ScheduleManage/Schedule_WishCourseTask/GetSelectJson?F_Type=1&F_Year=" + $("#F_Year").val() + "&F_Semester=" + $("#F_SemesterId").val() + "&F_Divis=" + $("#F_DivisId").val() + "&F_Grade=" + $("#F_GradeId").val(),
        //    id: "F_Id",
        //    text: "F_TaskName"
        //});
        $.ajax({
            url: "/ScheduleManage/Schedule_WishCourseTask/GetSelectJson?F_Type=1&F_Year=" + $("#F_Year").val() + "&F_Semester=" + $("#F_SemesterId").val() + "&F_Divis=" + $("#F_DivisId").val() + "&F_Grade=" + $("#F_GradeId").val(),
            dataType: "json",
            async: false,
            success: function (data) {
                var selectOptions = $.map(data, function (item, i) {
                    var state = top.clients.dataItems["WithCourseStatus"][item.F_Status] == undefined ? "" : top.clients.dataItems["WithCourseStatus"][item.F_Status];
                    return '<option value=' + item.F_Id + '>' + item.F_TaskName + '(' + state + ')' + '</option>'
                })
                $('#F_TaskId').append(selectOptions.join(''))
            }
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">年度：</th>
                    <td class="formValue">
                        <select id="F_Year" name="F_Year" class="form-control required">
                            <option value="">选择年度</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">学期：</th>
                    <td class="formValue">
                        <select id="F_SemesterId" name="F_SemesterId" class="form-control required">
                            <option value="">选择学期</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">学部：</th>
                    <td class="formValue">
                        <select id="F_DivisId" name="F_DivisId" class="form-control required">
                            <option value="">选择学部</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">年级：</th>
                    <td class="formValue">
                        <select id="F_GradeId" name="F_GradeId" class="form-control required">
                            <option value="">选择年级</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <th class="formTitle">任务名称</th>
                    <td class="formValue">
                            <select id="F_TaskId" name="F_TaskId" class="form-control required">
                                <option value="">选择预选任务</option>
                            </select>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>