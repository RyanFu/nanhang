@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    //收费项目ID
    var keyValue = $.request("keyValue");
    //收费标准ID
    var F_ChargeScheme_ID = $.request("F_ChargeScheme_ID");

    $(function () {
        initControl();

        $("#F_ChargeScheme_ID").val(F_ChargeScheme_ID);

        if (!!keyValue) {
            $.ajax({
                url: "/SchoolManage/School_ChargeScheme_Detail/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    $("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
                    $("#form1").find('div.ckbox label').attr('for', '')
                }
            });
        }
    });
    function initControl() {
        $("#F_Fees_ID").bindSelect({
            dictionary: 'F_Fees'
        })

		$.addRequired('#form1')
    }
    function submitForm() {

        $("#F_Fees_Name").val($("#select2-F_Fees_ID-container").text());

        if (!$('#form1').formValid()) {
            return false;
        }

        $.submitForm({
            url: "/SchoolManage/School_ChargeScheme_Detail/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                parent.top.frames["Items"].$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
            @*<li ><a href="#">扩展信息</a></li>*@
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">收费项目</th>
                    <td class="formValue">
                        <select required id="F_Fees_ID" name="F_Fees_ID" class="form-control required"></select>
                        <input id="F_ChargeScheme_ID" name="F_ChargeScheme_ID" type="hidden" />
                        <input id="F_Fees_Name" name="F_Fees_Name" type="hidden" />
                    </td>
                    <th class="formTitle">收费金额</th>
                    <td class="formValue">
                        <input required data-rule-isNumber="true" id="F_Fees" name="F_Fees" type="text" class="form-control required" placeholder="请输入收费金额" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">备注</th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Description" name="F_Description" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>