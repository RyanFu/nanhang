@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SchoolManage/School_ComeBackRoute/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data)
                }
            });
        }
    });
    function initControl() {
        $("#F_Year").bindSelect({
            dictionary: 'limYear'
        });
        $("#F_Divis_ID").bindCheckBox({
            url: "/SystemManage/Organize/GetCheckBoxJson?tname=School_ComeBackRoute&keyword=" + keyValue,
            id: "value",
            text: "text",
            name: "F_Divis_ID"
        });
        $("#F_City").bindSelect({
            url: "/SchoolManage/School_Area/GetSelectJsonByCategoryId?F_ParentId=0",
        });
        $("#F_City").change(function () {
            $("#F_Country").find("option").remove();
            $("#F_Country").append("<option value=''>选择乡镇</option>");
            $("#F_Country").bindSelect({
                url: "/SchoolManage/School_Area/GetSelectJsonByCategoryId?F_ParentId=" + $("#F_City").val(),
            });
        });

        $("#F_ComeBackType").bindSelect({
            dictionary: 'F_ComeBackType'
        })
        $("#F_ComeBackType").change(function () {
            if ($("#F_ComeBackType").val() == "自行接送") {
                //alert(1);
                //$("#F_Province").attr("required","false");
            }
        })
        $("#F_Charge_mode").bindSelect({
            dictionary: 'F_Charge_mode'
        })
        $.addRequired('#form1')
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SchoolManage/School_ComeBackRoute/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
