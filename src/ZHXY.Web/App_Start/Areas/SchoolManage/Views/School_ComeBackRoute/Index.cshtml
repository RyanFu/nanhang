@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
        $("#F_ComeBackType").bindSelect({
            dictionary: 'F_ComeBackType',
            displayBlank: false
        })
        $("#F_Year").bindSelect({
            dictionary: 'F_Year',
            displayBlank: false
        });
        //$.ajax({
        //    url: "/SchoolManage/School_ComeBackRoute/GetJsonByPCC?F_Province=120000&F_City=120100&F_Country=120101&F_ComeBackType=1&F_Charge_mode=2&F_Year=2018&F_Divis_ID=edc1c5b7-579c-4ceb-a647-b03078282c3b&F_Grade_ID=b547b643-c5bc-4581-b6ac-29302ae045d0",
        //    dataType: "json",
        //    async: false,
        //    success: function (data) {
        //        console.log(data);
        //    }
        //});
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/SchoolManage/School_ComeBackRoute/GetGridJson",
            height: $(window).height() - 173,
            colModel: [
              	{ label: '主键', name: 'F_Id', hidden: true },
                { label: '序号', name: 'F_SortCode', width: 80, align: 'left' },
                //{ label: '路线名称', name: 'F_Title', width: 80, align: 'left' },
				//{
				//    label: '学部', name: 'F_Divis_ID', width: 80, align: 'left',
				//    formatter: function (cellvalue) {
				//        return top.clients.organize[cellvalue] == null ? "" : top.clients.organize[cellvalue].fullname;
				//    }
				//},
                //{
                //    label: '入学年段', name: 'F_INYear', width: 80, align: 'left', formatter: function (cellvalue) {
                //        return top.clients.dataItems["In_Year"][cellvalue] == undefined ? "" : top.clients.dataItems["In_Year"][cellvalue];
                //    }
                //},
                {
                    label: '收费年度', name: 'F_Year', width: 80, align: 'left',
                    formatter: function (cellvalue) {
                        return top.clients.dataItems["F_Year"][cellvalue] == undefined ? "" : top.clients.dataItems["F_Year"][cellvalue];
                    }
                },

                {
                    label: '乘坐类型', name: 'F_ComeBackType', width: 80, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        return top.clients.dataItems["F_ComeBackType"][cellvalue] == undefined ? "" : top.clients.dataItems["F_ComeBackType"][cellvalue];
                    }
                },
                {
                    label: '收费方式', name: 'F_Charge_mode', width: 80, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        return top.clients.dataItems["F_Charge_mode"][cellvalue] == undefined ? "" : top.clients.dataItems["F_Charge_mode"][cellvalue];
                    }
                },

				{ label: '收费', name: 'F_Price', width: 80, align: 'left' },
                {
                    label: '目的地区', name: 'F_City', width: 80, align: 'left',
                    formatter: function (cellvalue) {
                        return top.clients.schoolarea[cellvalue] == null ? "" : top.clients.schoolarea[cellvalue].fullname;
                    }
                },
                {
                    label: '目的区县', name: 'F_Country', width: 80, align: 'left', formatter: function (cellvalue) {
                        return top.clients.schoolarea[cellvalue] == null ? "" : top.clients.schoolarea[cellvalue].fullname;
                    }
                },
                { label: '备注', name: 'F_Description', width: 200, align: 'left' },
                //{ label: '序号', name: 'F_SortCode', width: 80, align: 'left' },
                //{
                //    label: '所属部门', name: 'F_DepartmentId', width: 80, align: 'left',
                //    formatter: function (cellvalue) {
                //        return top.clients.organize[cellvalue] == null ? "" : top.clients.organize[cellvalue].fullname;
                //    }
                //},
                //{ label: '删除标记', name: 'F_DeleteMark', width: 80, align: 'left' },
                {
                    label: "启用状态", name: "F_EnabledMark", width: 60, align: "center",
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 1) {
                            return '<span class=\"label label-success\">正常</span>';
                        } else if (cellvalue == 0) {
                            return '<span class=\"label label-default\">禁用</span>';
                        }
                    }
                },
                {
                    label: '创建时间', name: 'F_CreatorTime', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' }
                },
                //{ label: '创建者', name: 'F_CreatorUserId', width: 80, align: 'left' },
            ],
            pager: "#gridPager",
            sortname: 'F_DepartmentId asc,F_CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val(), F_DepartmentId: $("#F_DepartmentId").val(), F_Year: $("#F_Year").val(), F_ComeBackType: $("#F_ComeBackType").val(), F_CreatorTime_Start: $("#F_CreatorTime_Start").val(), F_CreatorTime_Stop: $("#F_CreatorTime_Stop").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增",
            url: "/SchoolManage/School_ComeBackRoute/Form",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Form",
            title: "修改",
            url: "/SchoolManage/School_ComeBackRoute/Form?keyValue=" + keyValue,
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        var deleteid = $('#gridList').jqGridRowValue('F_Id');
        var keyValue = "";
        for (var i = 0; i < deleteid.length; i++) {
            keyValue += deleteid[i] + "|";
        }
        $.deleteForm({
            url: "/SchoolManage/School_ComeBackRoute/DeleteForm",
            param: { keyValue: keyValue },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/SchoolManage/School_ComeBackRoute/Details?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null,
        });
    }

    function btn_disabled() {
        var disabledid = $('#gridList').jqGridRowValue('F_Id');
        var keyValue = "";
        for (var i = 0; i < disabledid.length; i++) {
            keyValue += disabledid[i] + "|";
        }
        $.modalConfirm("注：您确定要【禁用】该项吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/SchoolManage/School_ComeBackRoute/DisabledAccount",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }
    function btn_enabled() {
        var enabledid = $("#gridList").jqGridRowValue('F_Id')
        var keyValue = "";
        for (var i = 0; i < enabledid.length; i++) {
            keyValue += enabledid[i] + "|";
        }
        $.modalConfirm("注：您确定要【启用】该项吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/SchoolManage/School_ComeBackRoute/EnabledAccount",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }

    function btn_export() {
        var F_Year = $("#F_Year").val(); var F_ComeBackType = $("#F_ComeBackType").val();
        var keyValue = $("#txt_keyword").val();
        //if (keyValue != null)
        //    keyValue = "?keyword=" + keyValue;

        document.location = "/SchoolManage/School_ComeBackRoute/export?keyword=" + keyValue + "&F_Year=" + F_Year + "&F_ComeBackType=" + F_ComeBackType + "";
    }

    function btn_import() {
        var title = 'Excel';
        var extensions = 'xls,xlsx';
        var mimeTypes = 'application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet';
        $.modalOpen({
            id: "Form",
            title: "导入",
            url: "/Home/Import?title=" + title + "&extensions=" + extensions + "&mimeTypes=" + mimeTypes + "&fileName=接送费用模版.xls",
            width: "500px",
            height: "300px",
            callBack: function (iframeId) {
                var filePath = top.frames[iframeId].submitForm();
                importAcrion(filePath);
            }
        });
    }

    function importAcrion(filePath) {
        $.submitForm({
            url: "/SchoolManage/School_ComeBackRoute/import",
            param: { filePath: filePath },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_daily() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Daily",
            title: "编辑站点",
            url: "/SchoolManage/School_ComeBackSite/Index?keyValue=" + keyValue,
            width: "700px",
            height: "500px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>
        <div class="btn-group"><a id="NF-export" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_export()"><i class="fa fa-arrow-down"></i>导出</a></div>
        <div class="btn-group"><a id="NF-import" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_import()"><i class="fa fa-arrow-up"></i>导入</a></div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>
                <li class="split"></li>
                <li><a id="NF-disabled" authorize="yes" onclick="btn_disabled()"><i class="fa fa-stop-circle"></i>禁用</a></li>
                <li><a id="NF-enabled" authorize="yes" onclick="btn_enabled()"><i class="fa fa-play-circle"></i>启用</a></li>
                <li class="split"></li>
                @*<li><a class="mutil-edit" id="NF-daily" authorize="yes" onclick="btn_daily()"><i class="fa fa-search-plus"></i>编辑站点</a></li>*@
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <th class="formTitle">搜索：</th>
                <td>
                    <div class="input-group" style="margin-right:10px;width:200px;">
                        <select id="F_ComeBackType" name="F_ComeBackType" class="form-control">
                            <option value="">乘坐类型</option>
                        </select>
                    </div>
                </td>
                <td>
                    <div class="input-group" style="margin-right:10px;width:200px;">
                        <select id="F_Year" name="F_Year" class="form-control required">
                            <option value="">收费年度</option>
                        </select>
                    </div>
                </td>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="路线名称" style="width: 150px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>