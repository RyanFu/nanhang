@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SchoolManage/School_ChangeBill_Log/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                	$("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
                	$("#form1").find('div.ckbox label').attr('for', '')
                }
            });
        }
    });
    function initControl() {
        $("#F_Bill_Change_Type").bindSelect({
            dictionary: 'F_Bill_Change_Type'
        });
        $.simpleUploader($('.fileUpload'));
		$.addRequired('#form1')
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SchoolManage/School_ChangeBill_Log/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
            @*<li ><a href="#">扩展信息</a></li>*@
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">变更编号</th>
                    <td class="formValue">
                        <input id="F_No" name="F_No" type="text" class="form-control required" placeholder="请输入变更编号" />
                    </td>
                    <th class="formTitle">申请编号</th>
                    <td class="formValue">
                        <input id="F_Invit_No" name="F_Invit_No" type="text" class="form-control required" placeholder="请输入申请编号" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">学生姓名</th>
                    <td class="formValue">
                        <input id="F_Name" name="F_Name" type="text" class="form-control required" placeholder="请输入姓名" />
                    </td>
                    <th class="formTitle">学号</th>
                    <td class="formValue">
                        <input id="F_StudentNum" name="F_StudentNum" type="text" class="form-control required" placeholder="请输入学号" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">变更类型</th>
                    <td class="formValue">
                        <select id="F_Bill_Change_Type" name="F_Bill_Change_Type" type="text" class="form-control required" placeholder="请输入变更类型" />
                    </td>
                    <th class="formTitle">变更凭证</th>
                    <td class="formValue">
                        <div id="F_Proof" class="fileUpload">
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">变更金额</th>
                    <td class="formValue">
                        <input id="F_Fee" name="F_Fee" type="text" class="form-control required" placeholder="请输入变更金额" />
                    </td>
                </tr>

                <tr>
                    <th class="formTitle">变更人</th>
                    <td class="formValue">
                        <input id="F_Creator_Name" name="F_Creator_Name" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" />
                    </td>
                    <th class="formTitle">变更时间</th>
                    <td class="formValue">
                        <input id="F_CreatorTime" name="F_CreatorTime" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">变更备注</th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Description" name="F_Description" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>