<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SchoolManage/School_Attendance_Rules/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data)
                }
            });
        }
    });
    function initControl() {
        $('#F_AttendanceTime1').bindCheckBox({
            name: 'F_AttendanceTime1',
            dictionary: 'F_AttendanceTime'
        })
        $('#F_AttendanceTime2').bindCheckBox({
            name: 'F_AttendanceTime2',
            dictionary: 'F_AttendanceTime',
            required:false
        })
        $('#F_AttendanceTime3').bindCheckBox({
            name: 'F_AttendanceTime3',
            dictionary: 'F_AttendanceTime',
            required: false
        })
        $("#F_DepartmentId").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Division",
        });
        $.addRequired('#form1')
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }

        $.submitForm({
            url: "/SchoolManage/School_Attendance_Rules/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
