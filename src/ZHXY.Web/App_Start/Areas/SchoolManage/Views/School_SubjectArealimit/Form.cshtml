@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SchoolManage/School_SubjectArealimit/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data)
                }
            });
        }
    });
    function initControl() {
        $("#F_Province").bindSelect({
            url: "/SystemManage/Area/GetSelectJsonByCategoryId?F_ParentId=0",
        });

        $("#F_Province").change(function () {
            $("#F_City").find("option").remove();
            $("#F_City").append("<option value=''>选择市</option>");
            $("#F_City").bindSelect({
                url: "/SystemManage/Area/GetSelectJsonByCategoryId?F_ParentId=" + $("#F_Province").val(),
            });
        });
        $("#F_Divis_ID").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Division",
        });
        $("#F_Divis_ID").change(function () {
            $("#F_INYear").find("option").remove();
            $("#F_INYear").append("<option value=''>选择年段</option>");
            $("#F_INYear").bindSelect({
                OrgId: $("#F_Divis_ID").val(),
                dictionaryOrg: "F_InYear"
            });
        });
        $("#F_Year").bindSelect({
            dictionary: 'limYear'
        })
        //$("#F_INYear").bindSelect({
        //    dictionary: 'In_Year'
        //});
        $.addRequired('#form1')
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SchoolManage/School_SubjectArealimit/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                parent.top.frames["Daily"].$("#gridList").trigger("reloadGrid");
                //$.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
            @*<li ><a href="#">扩展信息</a></li>*@
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">年度</th>
                    <td class="formValue">
                        <select id="F_Year" name="F_Year" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">学部</th>
                    <td class="formValue">
                        <select id="F_Divis_ID" name="F_Divis_ID" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">年段</th>
                    <td class="formValue">
                        <select id="F_INYear" name="F_INYear" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">报名最大数</th>
                    <td class="formValue">
                        <input data-rule-isDigits="true" id="F_MaxSignNum" name="F_MaxSignNum" type="text" class="form-control required" placeholder="请输入报名最大数" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">区域省</th>
                    <td class="formValue">
                        <select id="F_Province" name="F_Province" class="form-control required">
                            <option value="">-请选择-</option>
                        </select>
                    </td>
                    <th class="formTitle">区域市</th>
                    <td class="formValue">
                        <select id="F_City" name="F_City" class="form-control required">
                            <option value="">-请选择-</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">序号</th>
                    <td class="formValue">
                        <input data-rule-isDigits="true" id="F_SortCode" name="F_SortCode" type="text" class="form-control required" placeholder="请输入序号" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">备注</th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Description" name="F_Description" class="form-control" style="height: 80px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>