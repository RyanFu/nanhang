@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
        $("#F_Divis_ID").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Division",
            displayBlank: false
        });

        $("#F_Divis_ID").change(function () {
            $("#F_Grade_ID").find("option").remove();
            $("#F_Class_ID").find("option").remove();
            $("#F_Grade_ID").append("<option value=''>选择年级</option>");
            $("#F_Grade_ID").bindSelect({
                url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Grade&parentId=" + $("#F_Divis_ID").val(),
                displayBlank: false
            });
        });

        $("#F_Grade_ID").change(function () {
            $("#F_Class_ID").find("option").remove();
            $("#F_Class_ID").append("<option value=''>选择班级</option>");
            $("#F_Class_ID").bindSelect({
                url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Class&parentId=" + $("#F_Grade_ID").val(),
                displayBlank: false
            });
        });
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/SchoolManage/School_Charge_Scheme/GetGridJson",
            height: $(window).height() - 173,
            colModel: [
              				                { label: '标准ID', name: 'F_Id', hidden: true, key: true  },
                  				                { label: '收费主题', name: 'F_Title', width: 80, align: 'left' },
                  				                { label: '收费类别', name: 'F_Type', width: 80, align: 'left',
                  				                    formatter: function (cellvalue) {
                  				                        return top.clients.dataItems["Fee_Type"][cellvalue] == undefined ? "" : top.clients.dataItems["Fee_Type"][cellvalue];
                  				                    }
                  				                },
                  				                {
                  				                    label: '年度', name: 'F_Year', width: 80, align: 'left',
                  				                    formatter: function (cellvalue) {
                  				                        return top.clients.dataItems["F_Year"][cellvalue] == undefined ? "" : top.clients.dataItems["F_Year"][cellvalue];
                  				                    }
                  				                },
                  				                { label: '学部', name: 'F_Divis_ID', width: 80, align: 'left',
                  				                    formatter: function (cellvalue) {
                  				                        return top.clients.organize[cellvalue] == null ? "" : top.clients.organize[cellvalue].fullname;
                  				                    }
                  				                },
                  				                { label: '年级', name: 'F_Grade_ID', width: 80, align: 'left' ,
                  				                    formatter: function (cellvalue) {
                                                        return top.clients.organize[cellvalue] == null ? "" : top.clients.organize[cellvalue].fullname;
                                                    }
                  				                },
                  				                { label: '班级', name: 'F_Class_ID', width: 80, align: 'left' ,
                  				                    formatter: function (cellvalue) {
                  				                        return top.clients.organize[cellvalue] == null ? "" : top.clients.organize[cellvalue].fullname;
                  				                    }
                  				                },
                  				                { label: '收费金额', name: 'F_Total_Fee', width: 80, align: 'left' },
                  				                //{ label: '备注', name: 'F_Remark', width: 80, align: 'left' },
                   							 	{ label: '创建时间', name: 'F_CreatorTime', width: 80, align: 'left',
                                                    formatter: "date", formatoptions: { srcformat:'Y-m-d H:i:s',newformat:'Y-m-d H:i:s' }
                                                },

                  				  				  				  				            ],
            pager: "#gridPager",
            sortname: 'F_DepartmentId asc,F_CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val(), F_Divis_ID: $("#F_Divis_ID").val(), F_Grade_ID: $("#F_Grade_ID").val(), F_Class_ID: $("#F_Class_ID").val(), F_Year: $("#F_Year").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增",
            url: "/SchoolManage/School_Charge_Scheme/Form",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Form",
            title: "修改",
            url: "/SchoolManage/School_Charge_Scheme/Form?keyValue=" + keyValue,
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        var deleteid = $('#gridList').jqGridRowValue('F_Id');
        var keyValue = "";
        for (var i = 0; i < deleteid.length; i++) {
            keyValue += deleteid[i] + "|";
        }
        $.deleteForm({
            url: "/SchoolManage/School_Charge_Scheme/DeleteForm",
            param: { keyValue: keyValue },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/SchoolManage/School_Charge_Scheme/Details?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null,
        });
    }

    function btn_addItems() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Items",
            title: "设置收费项目",
            url: "/SchoolManage/School_ChargeScheme_Detail/Index?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null,
        });
    }

    function btn_export() {
        var keyValue = $("#txt_keyword").val();
        if (keyValue != null)
            keyValue = "?keyword=" + keyValue;

        document.location = "/SchoolManage/School_Charge_Scheme/export" + keyValue;
    }

    function btn_import() {
        var title = 'Excel';
        var extensions = 'xls,xlsx';
        var mimeTypes = 'application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet';
        $.modalOpen({
            id: "Form",
            title: "导入",
            url: "/Home/Import?title=" + title + "&extensions=" + extensions + "&mimeTypes=" + mimeTypes + "&fileName=",
            width: "500px",
            height: "300px",
            callBack: function (iframeId) {
                var filePath = top.frames[iframeId].submitForm();
                importAcrion(filePath);
            }
        });
    }

    function importAcrion(filePath) {
        $.submitForm({
            url: "/SchoolManage/School_Charge_Scheme/import",
            param: { filePath: filePath },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>
        <div class="btn-group"><a id="NF-export" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_export()"><i class="fa fa-arrow-down"></i>导出</a></div>
        <div class="btn-group"><a id="NF-import" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_import()"><i class="fa fa-arrow-up"></i>导入</a></div>
            <div class="operate">
                <ul class="nav nav-pills">
                    <li class="first">已选中<span>1</span>项</li>
                    <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                    <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a></li>
                    <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>
                    <li class="split"></li>
                    <li><a id="NF-AddItems" authorize="yes" onclick="btn_addItems()"><i class="fa fa-pencil-square-o"></i>设置收费项目</a></li>
                </ul>
                <a href="javascript:;" class="close"></a>
            </div>
            <script>$('.toolbar').authorizeButton()</script>
        </div>
    <div class="search">
        <table>
            <tr>
                <th class="formTitle">搜索：</th>
                <td>
                    <div class="input-group" style="margin-right:10px;width:200px;">
                        <select id="F_Divis_ID" name="F_Divis_ID" class="form-control">
                            <option value="">选择学部</option>
                        </select>
                    </div>
                </td>
                <td>
                    <div class="input-group" style="margin-right:10px;width:200px;">
                        <select id="F_Grade_ID" name="F_Grade_ID" class="form-control">
                            <option value="">选择年级</option>
                        </select>
                    </div>
                </td>
                <td>
                    <div class="input-group" style="margin-right:10px;width:200px;">
                        <select id="F_Class_ID" name="F_Class_ID" class="form-control">
                            <option value="">选择班级</option>
                        </select>
                    </div>
                </td>
                <td>
                    <div class="input-group" style="margin-right:10px;width:200px;">
                        <select id="F_Year" name="F_Year" class="form-control">
                            <option value="0">选择年度</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                            <option value="2020">2020</option>
                            <option value="2021">2021</option>
                            <option value="2022">2022</option>
                            <option value="2023">2023</option>
                            <option value="2024">2024</option>
                            <option value="2025">2025</option>
                            <option value="2026">2026</option>
                        </select>
                    </div>
                </td>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="主题" style="width: 150px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>