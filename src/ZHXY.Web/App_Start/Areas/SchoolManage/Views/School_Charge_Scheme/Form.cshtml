@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SchoolManage/School_Charge_Scheme/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data)
                }
            });
        }
    });
    function initControl() {
        $("#F_Type").bindSelect({
            dictionary: 'Fee_Type'
        })

        $("#F_Divis_ID").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Division",
        });

        $("#F_Divis_ID").change(function () {
            $("#F_Grade_ID").find("option").remove();
            $("#F_Grade_ID").append("<option value=''>==请选择==</option>");
            $("#F_Grade_ID").bindSelect({
                url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Grade&parentId=" + $("#F_Divis_ID").val(),
            });
        });

        $("#F_Grade_ID").change(function () {
            $("#F_Class_ID").find("option").remove();
            $("#F_Class_ID").append("<option value=''>==请选择==</option>");
            $("#F_Class_ID").bindSelect({
                url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Class&parentId=" + $("#F_Grade_ID").val(),
            });
        });

		$.addRequired('#form1')
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SchoolManage/School_Charge_Scheme/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
            @*<li ><a href="#">扩展信息</a></li>*@
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
                <table class="form">
                <tr>
                    <th class="formTitle">收费主题</th>
                    <td class="formValue">
                        <input id="F_Title" name="F_Title" type="text" class="form-control required" placeholder="请输入收费主题" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">收费类别</th>
                    <td class="formValue">
                        <select id="F_Type" name="F_Type" class="form-control required" placeholder="收费类别">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">年度</th>
                    <td class="formValue">
                        <input required data-rule-isNumber="true" id="F_Year" name="F_Year" type="text" class="form-control" placeholder="请输入年度" value="@DateTime.Now.Year" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">学部</th>
                    <td class="formValue">
                        <select id="F_Divis_ID" name="F_Divis_ID" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">年级</th>
                    <td class="formValue">
                        <select id="F_Grade_ID" name="F_Grade_ID" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">班级</th>
                    <td class="formValue">
                        <select id="F_Class_ID" name="F_Class_ID" class="form-control required">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                    <th class="formTitle">合计金额</th>
                    <td class="formValue">
                        <input data-rule-isNumber="true" id="F_Total_Fee" name="F_Total_Fee" type="text" class="form-control required" placeholder="请输入收费金额" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea style="height:100px" id="F_Description" name="F_Description" class="form-control"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>