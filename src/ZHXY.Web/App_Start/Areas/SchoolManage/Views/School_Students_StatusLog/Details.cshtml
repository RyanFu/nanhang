@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/framework-custom-webuploader.css" />
<link href="/Content/js/simditor/css/simditor.css" rel="stylesheet" />
<script type="text/javascript" src="~/Content/js/webuploader/webuploader.js"></script>
<script src="~/Content/js/Fileupload.js"></script>
<script src="~/Content/js/simditor/js/module.min.js"></script>
<script src="~/Content/js/simditor/js/hotkeys.min.js"></script>
<script src="~/Content/js/simditor/js/uploader.min.js"></script>
<script src="~/Content/js/simditor/js/simditor.min.js"></script>
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SchoolManage/School_Students_StatusLog/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    $("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
                    $("#form1").find('div.ckbox label').attr('for', '')
                    var sellength = document.getElementsByTagName("select")
                    for (var i = 0; i < sellength.length; i++) {
                        $('#' + sellength[i].id).attr('disabled', 'disabled').parents('.formValue').addClass('disabled').prev('.formTitle').addClass('disabled')
                    }
                }
            });
        }
    });
    function initControl() {
        $("#F_Divis_ID").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Division",
            displayBlank: false
        });

        $("#F_Divis_ID").change(function () {
            $("#F_Grade_ID").find("option").remove();
            $("#F_Grade_ID").bindSelect({
                url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Grade&parentId=" + $("#F_Divis_ID").val(),
                displayBlank: false
            });

            if ($("#F_Class_ID").find("option").length > 1) {
                RefreshClass();
            }
        });

        var RefreshClass = function (F_Grand_Id) {
            $("#F_Class_ID").find("option").remove();
            $("#F_Class_ID").bindSelect({
                url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Class&parentId=" + F_Grand_Id,
                displayBlank: false
            });
        }

        $("#F_Grade_ID").change(function () {
            RefreshClass($("#F_Grade_ID").val());
        });
        $.addRequired('#form1')
        $.simpleUploader($('#F_File'), {
            maxFile: 1,
            maxSize: "20",
            accept: {
                title: 'Image',
                extensions: 'gif,jpg,jpeg,bmp,png',
                mimeTypes: 'image/*'
            },
        })
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
            @*<li ><a href="#">扩展信息</a></li>*@
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">姓名</th>
                    <td class="formValue">
                        <input id="F_Name" name="F_Name" type="text" class="form-control required" />
                    </td>
                    <th class="formTitle">学号</th>
                    <td class="formValue">
                        <input id="F_StudentNum" name="F_StudentNum" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">日常类型</th>
                    <td class="formValue">
                        <input id="F_CurStatu" name="F_CurStatu" type="text" class="form-control required" />
                    </td>
                    <th class="formTitle">学部</th>
                    <td class="formValue">
                        <select id="F_Divis_ID" name="F_Divis_ID" class="form-control required">
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">年级</th>
                    <td class="formValue">
                        <select id="F_Grade_ID" name="F_Grade_ID" class="form-control required">
                        </select>
                    </td>
                    <th class="formTitle">归属班级</th>
                    <td class="formValue">
                        <select id="F_Class_ID" name="F_Class_ID" class="form-control required">
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle required">变更凭证</th>
                    <td class="formValue" colspan="3">
                        <div id="F_File" class="required fileUpload">
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">变更备注</th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Description" name="F_Description" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>