@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
        $("#F_Pattern").bindSelect({
            dictionary: 'F_Pattern',
            displayBlank: false
        })
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/SchoolManage/School_Presence_Info/GetIndexGridJson",
            height: $(window).height() - 128,
            colModel: [
			 	{ label: '主键', name: 'F_Id', hidden: true },
                { label: '标题', name: 'F_Title', width: 80, align: 'left' },

                {
                    label: '风采封面', name: 'F_Cover', width: 140, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == "") {
                            return "";
                        }
                        return "<img style='width:100px;height:50px;' src='" + cellvalue + "' onclick='F_Covers_Img(this)' />";
                        //return top.clients.dataItems["Education"][cellvalue] == undefined ? "" : top.clients.dataItems["Education"][cellvalue];
                    }
                },

                {
                    label: '文件格式', name: 'F_Pattern', width: 80, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        return top.clients.dataItems["F_Pattern"][cellvalue] == undefined ? "" : top.clients.dataItems["F_Pattern"][cellvalue];
                    }
                },
                {
                    label: '风采类别', name: 'F_PresenceType', width: 80, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        return top.clients.dataItems["F_PresenceType"][cellvalue] == undefined ? "" : top.clients.dataItems["F_PresenceType"][cellvalue];
                    }
                },
                {
                    label: '班级', name: 'F_Class', width: 80, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        var DivisGradeClass;
                        $.ajax({
                            url: "/SystemManage/Organize/GetDivisGradeClass?keyValue=" + cellvalue,
                            dataType: "json",
                            async: false,
                            success: function (data) {
                                DivisGradeClass = data;
                            }
                        });
                        return DivisGradeClass;
                    }
                },
                {
                    label: '是否首页展示', name: 'F_IsDisPlay', width: 80, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == false) {
                            return "否";
                        }
                        return "是";
                    }
                },

                { label: '创建日期', name: 'F_CreatorTime', width: 120, align: 'left' },
                {
                    label: '启用状态', name: 'F_EnabledMark', width: 60, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == true) {
                            return '<span class=\"label label-success\">启用</span>';
                        } else if (cellvalue == false) {
                            return '<span class=\"label label-default\">停用</span>';
                        }
                    }
                },

            ],
            pager: "#gridPager",
            sortname: 'F_DepartmentId asc,F_CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val(), F_Pattern: $("#F_Pattern").val(), F_EnabledMark: $("#F_EnabledMark").val(), F_CreatorTime_Start: $("#F_CreatorTime_Start").val(), F_CreatorTime_Stop: $("#F_CreatorTime_Stop").val() },
            }).trigger('reloadGrid');
        });
    }
    function F_Covers_Img(cellvalue) {
        var imageObject = new Image()
        imageObject.src = cellvalue.src
        imageObject.onload = function () {
            var width = this.width + 'px'
            var height = this.height + 'px'
            $.modalOpen({
                title: false,
                width: width,
                height: height,
                skin: 'layui-layer-nobg',
                btn: 0,
                url: cellvalue.src
            });
        }
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增",
            url: "/SchoolManage/School_Presence_Info/Form",
            width: "1200px",
            height: "710px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Form",
            title: "修改",
            url: "/SchoolManage/School_Presence_Info/Form?keyValue=" + keyValue,
            width: "1200px",
            height: "710px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        var deleteid = $('#gridList').jqGridRowValue('F_Id');
        var keyValue = "";
        for (var i = 0; i < deleteid.length; i++) {
            keyValue += deleteid[i] + "|";
        }
        $.deleteForm({
            url: "/SchoolManage/School_Presence_Info/DeleteForm",
            param: { keyValue: keyValue },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/SchoolManage/School_Presence_Info/Details?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null,
        });
    }

    function btn_disabled() {
        var disabledid = $('#gridList').jqGridRowValue('F_Id');
        var keyValue = "";
        for (var i = 0; i < disabledid.length; i++) {
            keyValue += disabledid[i] + "|";
        }
        $.modalConfirm("注：您确定要【停用】该项吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/SchoolManage/School_Presence_Info/DisabledAccount",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }
    function btn_enabled() {
        var enabledid = $("#gridList").jqGridRowValue('F_Id')
        var keyValue = "";
        for (var i = 0; i < enabledid.length; i++) {
            keyValue += enabledid[i] + "|";
        }
        $.modalConfirm("注：您确定要【启用】该项吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/SchoolManage/School_Presence_Info/EnabledAccount",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }

    function btn_export() {
        var keyValue = $("#txt_keyword").val();
        if (keyValue != null)
            keyValue = "?keyword=" + keyValue;

        document.location = "/SchoolManage/School_Presence_Info/export" + keyValue;
    }

    function btn_import() {
        var title = 'Excel';
        var extensions = 'xls,xlsx';
        var mimeTypes = 'application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet';
        $.modalOpen({
            id: "Form",
            title: "导入",
            url: "/Home/Import?title=" + title + "&extensions=" + extensions + "&mimeTypes=" + mimeTypes + "",
            width: "500px",
            height: "300px",
            callBack: function (iframeId) {
                var filePali = top.frames[iframeId].submitForm();
                importAcrion(filePath);
            }
        });
    }

    function importAcrion(filePath) {
        $.submitForm({
            url: "/SchoolManage/School_Presence_Info/import",
            param: { filePath: filePath },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>
        @*<div class="btn-group"><a id="NF-export" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_export()"><i class="fa fa-arrow-down"></i>导出</a></div>
            <div class="btn-group"><a id="NF-import" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_import()"><i class="fa fa-arrow-up"></i>导入</a></div>*@
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                <li><a class="multi-edit" id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a></li>
                @*<li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>*@
                <li><a id="NF-disabled" authorize="yes" onclick="btn_disabled()"><i class="fa fa-stop-circle"></i>停用</a></li>
                <li><a id="NF-enabled" authorize="yes" onclick="btn_enabled()"><i class="fa fa-play-circle"></i>启用</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <ul>
            <li class="formTitle">搜索：</li>
            <li>
                <div class="input-group" style="margin-top:1px">
                    <input id="F_CreatorTime_Start" name="F_CreatorTime_Start" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" placeholder="创建时间开始" />
                </div>
            </li>
            <li><div class="input-group" style="width:10px">--</div></li>
            <li>
                <div class="input-group" style="margin-right:10px;margin-top:1px">
                    <input id="F_CreatorTime_Stop" name="F_CreatorTime_Stop" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" placeholder="创建时间结束" />
                </div>
            </li>
            <li>
                <div class="input-group" style="margin-right:10px;width:200px;">
                    <select id="F_Pattern" name="F_Pattern" class="form-control">
                        <option value="">选择类型</option>
                    </select>
                </div>
            </li>
            <li>
                <div class="input-group" style="margin-right:10px;width:200px;">
                    <select id="F_EnabledMark" name="F_EnabledMark" class="form-control">
                        <option value="">选择状态</option>
                        <option value="true">启用</option>
                        <option value="false">停用</option>
                    </select>
                </div>
            </li>
            <li>
                <div class="input-group">
                    @*<input id="txt_keyword" type="text" class="form-control" placeholder="姓名/手机" style="width: 150px;">*@
                    <span class="input-group-btn">
                        <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </li>
        </ul>
    </div>
</div>
