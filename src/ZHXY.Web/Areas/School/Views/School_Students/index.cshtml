    function btn_updcurstatu(row) {
        var keyValue = row[0].F_Id;
        var F_CurStatu = row[0].F_CurStatu
        //alert(F_CurStatu);
        if (F_CurStatu != "undefined") {
            if (F_CurStatu != "正常在校" && F_CurStatu != "临时请假" && F_CurStatu != "长期请假") {
                top.layer.alert("当前状态暂不支持变更！", { icon: "fa-times-circle", title: "系统提示", btn: ["确认"], btnclass: ["btn btn-primary"] });
                return;
            }
        }
        $.modalOpen({
            id: "updcurstatu",
            title: '调整在校状态',
            url: '/SchoolManage/School_Students_StatusLog/Index?keyValue=' + keyValue + "",
            width: "900px",
            height: "700px",
            btn: null,
        });
    }

    function btn_updxjstatu(row) {
        var keyValue = row[0].F_Id;

        $.modalOpen({
            id: "updcurstatu",
            title: '调整学籍',
            url: '/SchoolManage/School_Students/UpdSchool_Index?keyValue=' + keyValue + "",
            width: "1200px",
            height: "700px",
            btn:null,
        });
    }
    function btn_edit_price(row) {
        var keyValue = row[0].F_Id;
        $.ajax({
            url: "/SchoolManage/School_Students/GetFormJson?keyValue=" + keyValue + "",
            dataType: "json",
            success: function (data) {
                debugger
                $.ajax({
                    url: "/SchoolManage/School_EntrySignUp/GetForm?F_InitNum=" + data.F_InitNum + "",
                    dataType: "json",
                    success: function (item) {
                        var xyid = item.F_Id;
                        var F_Name = item.F_Name;
                        var F_Statu = item.F_Statu;
                        $.modalOpen({
                            id: "Price",
                            title: F_Name + "的费用调整",
                            url: "/SchoolManage/School_EntrySignUp/Fast_Only_ComeBack?F_Statu=" + F_Statu + "&keyValue=" + xyid + "&F_Name=" + F_Name,
                            width: "1200px",
                            height: "700px",
                            btn: null
                        });
                    }
                });
            }
        });
    }
    function btn_import_two() {
