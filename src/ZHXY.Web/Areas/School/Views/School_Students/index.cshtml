            + "&F_Grade=" + $("#F_Grade_ID").val()
            + "&F_Class=" + $("#F_Class_ID").val()
            + "&F_Year=" + $("#F_Year").val();
    }
    function btn_import() {
        var title = 'Excel';
        var extensions = 'xls,xlsx';
        var mimeTypes = 'application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet';
        $.modalOpen({
            id: "Form",
            title: "导入学生档案",
            url: "/Home/Import?title=" + title + "&extensions=" + extensions + "&mimeTypes=" + mimeTypes + "&fileName=学生档案模版.xls",
            width: "500px",
            height: "300px",
            callBack: function (iframeId) {
                var filePath = top.frames[iframeId].submitForm();
                importAcrion(filePath);
            }
        });
    }

    function importAcrion(filePath) {
        $.submitForm({
            url: "/SchoolManage/School_Students/import",
            param: { filePath: filePath },
            success: function () {
                $.currentWindow().$("#schoolStudentsGrid").trigger("reloadGrid");
            }
        })
    }
    function btn_restpwd(id) {
        var keyValue = id[0].F_Users_ID
        $.modalOpen({
            id: "RevisePassword",
            title: '重置密码',
            url: '/SystemManage/User/RevisePassword?keyValue=' + keyValue,
            width: "450px",
            height: "260px",
