    function btn_edit(r) {
        var id = $(r).parents('.operating').attr('data-id')
        var keyValue = id;
        $.modalOpen({
            id: "Form",
            title: "修改学生档案",
            url: "/SchoolManage/School_Students/Form?keyValue=" + keyValue,
            width: "900px",
            height: "700px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete(ids) {
        var deleteid = $.map(ids, function (n) {
          return n.F_Id
        }).join('|');
        var keyValue = deleteid
        $.deleteForm({
            url: "/SchoolManage/School_Students/DeleteForm",
            param: { keyValue: keyValue },
            success: function () {
                $.currentWindow().$('#' + j.gridId).trigger("reloadGrid");
            }
