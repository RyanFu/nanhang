@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function getGrid() { return $("#gridList"); }
    $(function () {
        initGrid();
        $("#btn_search").bind("click", reloadGrid);
        $("#txt_keyword").bind("input", reloadGrid);

        setInterval(function () {
            if ($("#txt_keyword").val() != "") {
                $.keyLight("gridList", $("#txt_keyword").val(), "skyblue");
            }
        }, 100);

    })

    // 重载数据表格
    function reloadGrid() {
        getGrid().setGridParam(
            { postData: { keyword: $("#txt_keyword").val() } }
        ).trigger('reloadGrid');
    }

    // 初始化列表
    function initGrid() {
        getGrid().dataGrid({
            url: "/Dorm/DormBuilding/GetList",
            autoGridHeight: () => $(window).height() * 0.80,
            rowNum: 15,
            multiselect: false,
            colModel: [
                { label: "Id", name: "id", width: 150, align: 'left', key: true, hidden: true },

                { label: '名称', name: 'title', width: 200, align: 'left' },
                { label: '所属区域', name: 'area', width: 150, align: 'left' },
                { label: "楼栋号", name: "buildingNo", width: 150, align: 'left' },
                { label: "楼层号", name: "floorNum", width: 150, align: 'left' },
                { label: "单元号", name: "unitNum", width: 150, align: 'left' },
                { label: "地址", name: "address", width: 150, align: 'left' },                
                {
                    label: '楼栋类型', name: 'buildingType',
                    formatter: function (cellvalue) {
                        if (!cellvalue) return "";
                        return top.clients.dataItems["BuildingType"] == null ? "" : top.clients.dataItems.BuildingType[cellvalue];
                    }
                },
                {
                    label: '楼栋状态', name: 'buildingStatus', width: 80, align: 'left',
                    formatter: function (cellvalue) {
                        if (!cellvalue) return "";
                        return top.clients.dataItems["BuildingStatus"] == null ? "" : top.clients.dataItems.BuildingStatus[cellvalue];
                    }
                }               
            ],
            viewrecords: true,
            pager: "#gridPager",
        });
    }

    // 添加
    function btn_add() {
        $.modalOpen({
            id: "Create",
            title: "新增",
            url: `/Dorm/DormBuilding/Form?op=Add`,
            width: "1000px",
            height: "510px",
            btn: ["提交"],
            callBack: function (id) { top.frames[id].submit(); }
        });
    }
    // 编辑
    function btn_edit() {
        let rowid = getGrid().getGridParam("selrow");        
        $.modalOpen({
            id: "Edit",
            title: "修改",
            url: `/Dorm/DormBuilding/Form?op=Update&id=${rowid}`,
            width: "1000px",
            height: "510px",
            btn: ["提交"],
            callBack: function (id) { top.frames[id].submit(); }
        });
    }
    // 删除
    function btn_delete() {
        var defaults = {
            prompt: "注：您确定要删除该项数据吗？",
            url: "/Dorm/DormBuilding/Delete",
            param: getGrid().getGridParam("selrow"),
            loading: "正在删除数据...",
            success: null,
            close: true
        };
        var options = $.extend(defaults, options);
        $.modalConfirm(options.prompt, function (r) {
            if (r) {
                $.loading(true, options.loading);
                $.ajax({
                    url: options.url,
                    type: 'post',
                    data: { id: options.param },
                    dataType: 'json',
                    success: function (data) {
                        switch (data.state) {
                            case 'success':
                                getGrid().trigger("reloadGrid");
                                $.modalMsg('删除成功', 'success');
                                break;
                            case 'error': $.modalMsg('删除失败', '"error"'); break;
                        }
                        $.loading(false);
                    },
                })
            }
        })
    }
    // 详情
    function btn_details() {
        let rowid = getGrid().getGridParam("selrow");
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: `/Dorm/DormBuilding/Form?op=Detail&id=${rowid}`,
            width: "1000px",
            height: "510px",
            btn: null
        });
    }
</script>
<div class="topPanel">
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="名称/编号" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
                <td>
                    <div class="toolbar">
                        <div class="btn-group">
                            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
                        </div>
                        <div class="btn-group"> <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i></a> </div>
                        <div class="operate">
                            <ul class="nav nav-pills">
                                <li class="first">已选中<span>1</span>项</li>
                                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                                <li><a class="multi-edit" id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a></li>
                                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>
                            </ul>
                            <a href="javascript:;" class="close"></a>
                        </div>
                        @*<script>$('.toolbar').authorizeButton()</script>*@
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>