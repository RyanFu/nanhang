@{
    
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    var colModel = [
        {
            label: '操作', name: 'operate', width: 30, index: 'operate', frozen: true,
            formatter: function (e, t, i) {
                var a = '<div class="operating"  data-id="' + i.F_Id + '">' +
                    '<i onClick="btn_restpwd(this)" class="fa fa-pencil" title="密码重置"></i>' +
                    '<i onClick="btn_details(this)" class="fa fa-search-plus" title="查看" style="margin-left:15px"></i>' +
                    '</div>';
                return a
            }
        },
        { label: '主键', name: 'F_Id', hidden: true, key: true },
        { label: '姓名', name: 'F_Name', width: 80, align: 'left' },
        {
            label: '学号', name: 'F_StudentNum', width: 150, align: 'left',
        },
        {
            label: '年级', name: 'F_Grade_ID', width: 80, align: 'left',
            formatter: function (cellvalue) {
                return top.clients.organize[cellvalue] == null ? "" : top.clients.organize[cellvalue].fullname;
            }
        },
        {
            label: '院系', name: 'F_Divis_ID', width: 80, align: 'left',
            formatter: function (cellvalue) {
                return top.clients.organize[cellvalue] == null ? "" : top.clients.organize[cellvalue].fullname;
            }
        },
        {
            label: '班级', name: 'F_Class_ID', width: 80, align: 'left',
            formatter: function (cellvalue) {
                return top.clients.organize[cellvalue] == null ? "" : top.clients.organize[cellvalue].fullname;
            }
        },
        {
            label: '性别', name: 'F_Gender', width: 60, align: 'center',
            formatter: function (cellvalue, options, rowObject) {
                if (cellvalue == "1") {
                    return '男';
                } else {
                    return '女';
                }
            }
        },
        { label: '联系电话', name: 'F_Tel' },
        { label: '用户ID', name: 'F_Users_ID', hidden: true },
    ];
    var j
    $(function () {

        $("#gridList").dataGrid({
            url: "/Dorm/School_Students/GetGridJson",
            height: $(window).height() - 173,
            colModel: colModel,
            multiselect:false
        })
        $("#F_Divis_ID").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Division",
            displayBlank: false
        });

        $("#F_Divis_ID").change(function () {
            changeGrade();
            //changeSubject();
        });

        $("#F_Grade_ID").change(function () {
            changeClass();
            //changeSubject();
        });
        $("#btn_search").click(function () {
            $('#' + j.gridId).jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val(), F_DepartmentId: $("#F_Divis_ID").val(), F_Grade: $("#F_Grade_ID").val(), F_Class: $("#F_Class_ID").val() },
            }).trigger('reloadGrid');
        });
    })

    function changeGrade() {
        $("#F_Grade_ID").find("option").remove();
        $("#F_Grade_ID").append("<option value=''>请选择</option>");
        $("#F_Grade_ID").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Grade&parentId=" + $("#F_Divis_ID").val(),
        });
        changeClass();
    }

    function changeClass() {
        $("#F_Class_ID").find("option").remove();
        $("#F_Class_ID").append("<option value=''>请选择</option>");
        $("#F_Class_ID").bindSelect({
            url: "/SystemManage/Organize/GetSelectJsonByCategoryId?keyword=Class&parentId=" + $("#F_Grade_ID").val(),
        });
    }
    function btn_details(row) {
        var keyValue = $(row).parents('.operating').attr('data-id')
        $.modalOpen({
            id: "Details",
            title: "查看学生档案",
            url: "/Dorm/School_Students/CollegeDetails?keyValue=" + keyValue,
            width: "600px",
            height: "500px",
            btn: null,
        });
    }

    function btn_export() {
        var keyValue = $("#txt_keyword").val();
        document.location = "/Dorm/School_Students/export?keyword="
            + keyValue
            + "&F_DepartmentId=" + $("#F_Divis_ID").val()
            + "&F_Grade=" + $("#F_Grade_ID").val()
            + "&F_Class=" + $("#F_Class_ID").val()
    }
    function btn_import() {
        var title = 'Excel';
        var extensions = 'xls,xlsx';
        var mimeTypes = 'application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet';
        $.modalOpen({
            id: "Form",
            title: "导入学生档案",
            url: "/Home/Import?title=" + title + "&extensions=" + extensions + "&mimeTypes=" + mimeTypes + "&fileName=学生档案模版.xls",
            width: "500px",
            height: "300px",
            callBack: function (iframeId) {
                var filePath = top.frames[iframeId].submitForm();
                importAcrion(filePath);
            }
        });
    }

    function importAcrion(filePath) {
        $.submitForm({
            url: "/Dorm/School_Students/import",
            param: { filePath: filePath },
            success: function () {
                $.currentWindow().$('#' + j.gridId).trigger("reloadGrid");
            }
        })
    }
    function btn_restpwd(row) {
        var keyValue = $(row).parents('.operating').attr('data-id')
        $.modalOpen({
            id: "RevisePassword",
            title: '重置密码',
            url: '/SystemManage/User/RevisePassword?keyValue=' + keyValue,
            width: "450px",
            height: "260px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    //function btn_import_two() {
    //    var title = 'Excel';
    //    var extensions = 'xls,xlsx';
    //    var mimeTypes = 'application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet';
    //    $.modalOpen({
    //        id: "Form",
    //        title: "导入学生档案",
    //        url: "/Home/Import?title=" + title + "&extensions=" + extensions + "&mimeTypes=" + mimeTypes + "&fileName=学生档案模版.xls",
    //        width: "500px",
    //        height: "300px",
    //        callBack: function (iframeId) {
    //            var filePath = top.frames[iframeId].submitForm();
    //            importAcrion_two(filePath);
    //        }
    //    });
    //}

    //function importAcrion_two(filePath) {
    //    $.submitForm({
    //        url: "/Dorm/School_Students/import_two",
    //        param: { filePath: filePath },
    //        success: function () {
    //            $.currentWindow().$('#' + j.gridId).trigger("reloadGrid");
    //        }
    //    })
    //}
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group"><a id="NF-export" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_export()"><i class="fa fa-arrow-down"></i>导出学生档案</a></div>
        <div class="btn-group"><a id="NF-import" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_import()"><i class="fa fa-arrow-up"></i>导入学生档案</a></div>
    </div>
    <div class="search">
        <ul>
            <li class="formTitle">搜索：</li>
            <li>
                <div class="input-group" style="width:200px;">
                    <select id="F_Divis_ID" name="F_Divis_ID" class="form-control">
                        <option value="">选择院系</option>
                    </select>
                </div>
            </li>
            <li>
                <div class="input-group" style="width:200px;">
                    <select id="F_Grade_ID" name="F_Grade_ID" class="form-control">
                        <option value="">选择年级</option>
                    </select>
                </div>
            </li>
            <li>
                <div class="input-group" style="width:200px;">
                    <select id="F_Class_ID" name="F_Class_ID" class="form-control">
                        <option value="">选择班级</option>
                    </select>
                </div>
            </li>
            <li>
                <div class="input-group">
                    <input id="txt_keyword" type="text" class="form-control" placeholder="姓名｜学号" style="width: 150px;">
                    <span class="input-group-btn">
                        <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </li>
        </ul>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
