@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
        $("#F_DepartmentId").bindSelect({
            url: "/SystemManage/Organize/GetTreeSelectJson",
            displayBlank:false
        });
        $("#F_SysAreaId").bindSelect({
            url: "/SystemManage/Area/GetTreeSelectJson",
            displayBlank: false
        });
        $("#F_Gender").bindSelect({
            dictionary: '104',
            displayBlank: false
        })
        $("#F_Type").bindSelect({
            dictionary: 'F_Tax_type',
            displayBlank: false
        })
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/SystemManage/Sys_ARInvoice/GetGridJson",
            height: $(window).height() - 173,
            colModel: [
              							 	{ label: '主键', name: 'F_Id', hidden: true },
				  				                //{ label: '学部ID', name: 'F_Divis_ID', width: 80, align: 'left' },
                  				                //{ label: '年级ID', name: 'F_Grade_ID', width: 80, align: 'left' },
                  				                //{ label: '班级ID', name: 'F_Class_ID', width: 80, align: 'left' },
                  				                //{ label: '学生ID', name: 'F_Students_ID', width: 80, align: 'left' },
                  				                //{ label: '学号', name: 'F_StudentNum', width: 80, align: 'left' },
                  				                { label: '发票编号', name: 'F_Tax_Num', width: 80, align: 'left' },
                                                { label: '缴费单号', name: 'F_Bill_Num', width: 80, align: 'left' },
                  				                { label: '发票抬头', name: 'F_Title', width: 80, align: 'left' },
                  				                { label: '发票类型', name: 'F_Type', width: 80, align: 'left' },
                  				                { label: '发票内容', name: 'F_InvoiceDesc', width: 80, align: 'left' },
                  				                { label: '发票金额', name: 'F_Money', width: 80, align: 'left' },
                  				                { label: '发票税点', name: 'F_TaxRate', width: 80, align: 'left' },
                  				                //{ label: '公司税号', name: 'F_TaxNum', width: 80, align: 'left' },
                  				                //{ label: '公司名称', name: 'F_Company_Name', width: 80, align: 'left' },
                  				                //{ label: '公司地址', name: 'F_Company_Addre', width: 80, align: 'left' },
                  				                //{ label: '公司电话', name: 'F_Company_Tel', width: 80, align: 'left' },
                  				                //{ label: '发票凭证', name: 'F_Tax_Proof', width: 80, align: 'left' },
                  				                {
                  				                    label: '发票状态', name: 'F_Statu', width: 80, align: 'left',
                  				                    formatter: function (cellvalue, options, rowObject) {
                  				                        if (cellvalue == 'true') {
                  				                            return '已开票';
                  				                        } else {
                  				                            return '未开票';
                  				                        }

                  				                    }
                  				                },
                //  				                { label: '备注', name: 'F_Remark', width: 80, align: 'left' },
                //  				                { label: '序号', name: 'F_SortCode', width: 80, align: 'left' },
                //  				                { label: '所属部门', name: 'F_DepartmentId', width: 80, align: 'left' },
                //  				                { label: '删除标记', name: 'F_DeleteMark', width: 80, align: 'left' },
                //  							 	{ label: "启用状态", name: "F_EnabledMark", width: 60, align: "center",
                //   formatter: function (cellvalue, options, rowObject) {
                //        if (cellvalue == 1) {
                //            return '<span class=\"label label-success\">正常</span>';
                //        } else if (cellvalue == 0) {
                //            return '<span class=\"label label-default\">禁用</span>';
                //        }
                //    }
                //},
                   							 	{ label: '创建时间', name: 'F_CreatorTime', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat:'Y-m-d H:i:s',newformat:'Y-m-d H:i:s' }
                },
                  				                //{ label: '创建者', name: 'F_CreatorUserId', width: 80, align: 'left' },
                  				  				  				  				            ],
            pager: "#gridPager",
            sortname: 'F_DepartmentId asc,F_CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: {
                    //keyword: $("#txt_keyword").val(),
                    F_ARInvoiceNum: $("#txt_ARInvoiceNum").val(),
                    F_Bill_Num: $("#F_Bill_Num").val(),
                    F_Type: $("#txt_Type").val(),
                    F_CreatorTime_Start: $("#F_CreatorTime_Start").val(),
                    F_CreatorTime_Stop: $("#F_CreatorTime_Stop").val()
                },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增",
            url: "/SystemManage/Sys_ARInvoice/Form",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Form",
            title: "修改",
            url: "/SystemManage/Sys_ARInvoice/Form?keyValue=" + keyValue,
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        var deleteid = $('#gridList').jqGridRowValue('F_Id');
        var keyValue = "";
        for (var i = 0; i < deleteid.length; i++) {
            keyValue += deleteid[i] + "|";
        }
        $.deleteForm({
            url: "/SystemManage/Sys_ARInvoice/DeleteForm",
            param: { keyValue: keyValue },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = ($("#gridList").jqGridRowValue('F_Id'))[0];
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/SystemManage/Sys_ARInvoice/Details?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null,
        });
    }

    function btn_disabled() {
        var keyValue = $("#gridList").jqGridRowValue('F_Id');
        $.modalConfirm("注：您确定要【禁用】该项吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/SystemManage/Sys_ARInvoice/DisabledAccount",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }
    function btn_enabled() {
        var keyValue = $("#gridList").jqGridRowValue('F_Id');
        $.modalConfirm("注：您确定要【启用】该项吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/SystemManage/Sys_ARInvoice/EnabledAccount",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }

    function btn_export() {

        var F_ARInvoiceNum = $("#txt_ARInvoiceNum").val();
        var F_Charge_ID = $("#txt_Charge_ID").val();
        var F_Type = $("#txt_Type").val();
        var F_CreatorTime_Start = $("#F_CreatorTime_Start").val();
        var F_CreatorTime_Stop = $("#F_CreatorTime_Stop").val();

        var str = "?F_ARInvoiceNum=" + F_ARInvoiceNum;

        if (F_Charge_ID != null)
            str += "&F_Charge_ID=" + F_Charge_ID;
        if (F_Type != null)
            str += "&F_Type=" + F_Type;
        if (F_CreatorTime_Start != null)
            str += "&F_CreatorTime_Start=" + F_CreatorTime_Start;
        if (F_CreatorTime_Stop != null)
            str += "&F_CreatorTime_Stop=" + F_CreatorTime_Stop;

        console.log(str);

        document.location = "/SystemManage/Sys_ARInvoice/export" + str;
    }

    function btn_import() {
        var title = 'Excel';
        var extensions = 'xls,xlsx';
        var mimeTypes = 'application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet';
        $.modalOpen({
            id: "Form",
            title: "导入",
            url: "/Home/Import?title=" + title + "&extensions=" + extensions + "&mimeTypes=" + mimeTypes + "&fileName=开票模版.xls",
            width: "500px",
            height: "300px",
            callBack: function (iframeId) {
                var filePath = top.frames[iframeId].submitForm();
                importAcrion(filePath);
            }
        });
    }

    function importAcrion(filePath) {
        $.submitForm({
            url: "/SystemManage/Sys_ARInvoice/import",
            param: { filePath: filePath },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

