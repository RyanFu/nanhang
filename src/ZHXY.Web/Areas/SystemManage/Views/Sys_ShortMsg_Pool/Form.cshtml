@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/SystemManage/Sys_ShortMsg_Pool/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data)
                }
            });
        }
    });
    function initControl() {
        $("#F_ShortMsgModel").bindSelect({
            url: "/SystemManage/Sys_ShortMsgModel/GetSelectJson",
            id: "F_Id",
            text: "F_Title"
        });

        $("#F_ShortMsgModel").change(function () {
            $.ajax({
                url: "/SystemManage/Sys_ShortMsgModel/GetFormJson",
                data: { keyValue: $("#F_ShortMsgModel").val() },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#F_ShortMsg").html(data["F_Module"]);
                }
            });
        });
        $.addRequired('#form1')
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/SystemManage/Sys_ShortMsg_Pool/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
            @*<li ><a href="#">扩展信息</a></li>*@
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">接收人手机号</th>
                    <td class="formValue">
                        <input required data-rule-isTel="true" id="F_Mobile" name="F_Mobile" type="text" class="form-control required" placeholder="请输入接收人手机号" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">选择模板</th>
                    <td class="formValue">
                        <select id="F_ShortMsgModel" name="F_ShortMsgModel" class="form-control">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">短信内容</th>
                    <td class="formValue">
                        <textarea id="F_ShortMsg" name="F_ShortMsg" class="form-control required" style="height: 80px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>