@{
    
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    });
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/Assits/AssitsDevices/GetList",
            height: $(window).height() - 128,
            colModel: [
                { label: '主键', name: 'id', key: true, hidden: true },
                { label: '设备编号', name: 'deviceCode', width: 80, align: 'left', sortable: false },
                { label: '设备序列号', name: 'sn', width: 80, align: 'left', sortable: false },
                {
                    label: '运行状态', name: 'status', width: 80, align: 'left', sortable: false,
                    formatter: function (cellvalue) {
                        switch (cellvalue) {
                            case "1":
                                return "<img src=/Content/img/bp/yunxingzhong.png />&nbsp;&nbsp;运行中";
                                break;
                            case "2":
                                return "<img src=/Content/img/bp/yiguanji.png />&nbsp;&nbsp;已关机";
                                break;
                            case "3":
                                return "<img src=/Content/img/bp/weixiuzhong.png />&nbsp;&nbsp;维修中";
                                break;
                            default:
                                return "<img src=/Content/img/bp/yitingyong.png />&nbsp;&nbsp;已停用";
                        }
                    }
                },
                { label: '教室地址', name: 'address', width: 80, align: 'left', sortable: false },
                {
                    label: '显示模式', name: 'displayMode', width: 80, align: 'left', sortable: false,
                    formatter: function (cellvalue) {
                        return top.clients.dataItems["F_Display_Style"][cellvalue] == undefined ? "" : top.clients.dataItems["F_Display_Style"][cellvalue];
                    }
                }
            ],
            pager: "#gridPager",
            sortname: '',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val(), displayStyle: $("#displayStyle").val(), status: $("#status").val() },
            }).trigger('reloadGrid');
        });
    }

    function btn_edit() {
        let id = $("#gridList").getGridParam("selrow");
        $.modalOpen({
            id: "Form",
            title: "修改",
            url: "/Assits/AssitsDevices/Form?id=" + id,
            width: "900px",
            height: "650px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        var deleteid = $('#gridList').jqGridRowValue('Id');
        var keyValue = "";
        for (var i = 0; i < deleteid.length; i++) {
            keyValue += deleteid[i] + "|";
        }
        $.deleteForm({
            url: "/SchoolManage/School_Devices/DeleteForm",
            param: { keyValue: keyValue },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        });
    }
    function btn_details() {
        var keyValue = ($("#gridList").jqGridRowValue('Id'))[0];
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/SchoolManage/School_Devices/Details?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null,
        });
    }

    function btn_disabled() {
        var keyValue = $("#gridList").jqGridRowValue('Id');
        $.modalConfirm("注：您确定要【禁用】该项吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/SchoolManage/School_Devices/DisabledAccount",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                });
            }
        });
    }
    function btn_enabled() {
        var keyValue = $("#gridList").jqGridRowValue('Id');
        $.modalConfirm("注：您确定要【启用】该项吗？", function (r) {
            if (r) {
                $.submitForm({
                    url: "/SchoolManage/School_Devices/EnabledAccount",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                });
            }
        });
    }

    function btn_import() {
        var title = 'Excel';
        var extensions = 'xls,xlsx';
        var mimeTypes = 'application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet';
        $.modalOpen({
            id: "Form",
            title: "导入",
            url: "/Home/Import?title=" + title + "&extensions=" + extensions + "&mimeTypes=" + mimeTypes + "&fileName=考试设置模板.xls",
            width: "500px",
            height: "300px",
            callBack: function (iframeId) {
                var filePath = top.frames[iframeId].submitForm();
                importAcrion(filePath);
            }
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>

        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                <li><a class="multi-edit" id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        @*<script>$('.toolbar').authorizeButton()</script>*@
    </div>
    <div class="search">
        <ul>
            <li class="formTitle">搜索：</li>
            <li>
                <div class="input-group" style="margin-right:10px;width:200px;">
                    <select id="F_Device_Status" name="status" class="form-control">
                        <option value="">选择运行状态</option>
                    </select>
                </div>
            </li>
            <li>
                <div class="input-group" style="margin-right:10px;width:200px;">
                    <select id="F_Display_Style" name="displayStyle" class="form-control">
                        <option value="">选择显示模式</option>
                    </select>
                </div>
            </li>
            <li>
                <div class="input-group">
                    <input id="txt_keyword" type="text" class="form-control" placeholder="编号/序列号" style="width: 150px;">
                    <span class="input-group-btn">
                        <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </li>
        </ul>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>